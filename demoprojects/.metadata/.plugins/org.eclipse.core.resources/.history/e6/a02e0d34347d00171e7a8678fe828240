public class UserService {
	
	public void createAdmin(String fn, String ln, String email, String password){
		User u = new User();
		u.setFirstname(fn);
		u.setLastname(ln);
		u.setEmail(email);
		u.setPassword(password);
		u.setAdmin(true);
	}
	
