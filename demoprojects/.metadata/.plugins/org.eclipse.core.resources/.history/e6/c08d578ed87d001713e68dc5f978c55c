<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>JavaScript Intro</title>
</head>
<body>

	User:
	<input type="text" id="user" placeholder="Name">
	<button id="pop">Click Me</button>
	<table id="userTable">
		<tr>
			<th>ID</th>
			<th>Name</th>
		</tr>
	</table>


</body>

<script>
	var global = 0;
	var callback = function(e) {// e is used to pass the event object itself. callback function
	//window.alert("Hello World!"); // event listener
		console.log("Hello World");
		var username = document.getElementById("user").value; // string
		if (username) {
			var tr = document.createElement("TR");
			var id = document.createElement("TD");
			var name = document.createElement("TD");
			id = innerHTML = global++;
			name.innerHTML = username;
			tr.appendChild(id);
			tr.appendChild(name);
			document.getElementById("userTable").appendChild(tr);
		}
	}
	//document.addEventListener("click", callback, true)
	document.getElementById("pop").addEventListener("click", callback, false); // adding event listener to specific element
</script>
</html>